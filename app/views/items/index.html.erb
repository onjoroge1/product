<h1>Listing items</h1>

<style type="text/css">
.title{font-size: 24px; font-weight: bold; margin-bottom: 16px;}
.title a, a:hover{color: maroon;}
.price{color: maroon; font-weight: 800; font-size: 14; text-align: left;}
.description{margin-bottom: 16px;}
</style>

<%= link_to "Cart", :controller => :cart, :action => :index %>

<table>
  <!--tr>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Image url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr-->

<% @items.each do |item| %>
  <tr>
    <td><%=link_to image_tag(item.image_url), item %></td>
    <td>
    <div class="title"><h1><%= link_to item.title, item %></h1></div>
    <div class="description"><%= item.description %></div>
    <div class="price">$<%= item.price %></div>
    <div><%= button_to "Add to Cart", :controller => :cart, :action => :add, :id => item %></div>
    <div><%= link_to 'Show', item %> |
    <%= link_to 'Edit', edit_item_path(item) %> |
    <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></div>
  </td>
  </tr>
<% end %>
</table>

